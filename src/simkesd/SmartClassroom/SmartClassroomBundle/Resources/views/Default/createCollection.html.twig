{% extends 'SmartClassroomBundle:Default:index.html.twig' %}

{% block template_content %}

    <div class="container-fluid">
        <h1>Create collection</h1>
        <hr>
        <div class="row">
            {{ form_start(form, {'action': url('create_collection') , 'method': 'POST', 'attr': {'class': 'form-horizontal', 'role': 'form'}}, form_enctype(form)) }}
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
                    <h6>Upload a different photo...</h6>

                    {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">Ã—</a>
                    <i class="fa fa-coffee"></i>
                    This is an <strong>.alert</strong>. Use this to show important messages to the user.
                </div>
                <h3>Collection info</h3>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Description:</label>
                    <div class="col-lg-8">
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Location description:</label>
                    <div class="col-lg-8">
                        {{ form_widget(form.location_description, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <hr>
    {#</div>#}
    <!-- /.container-fluid -->
{% endblock %}