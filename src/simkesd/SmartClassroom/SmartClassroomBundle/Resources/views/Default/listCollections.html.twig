{% extends 'SmartClassroomBundle:Default:index.html.twig' %}

{% block template_content %}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                List all collections <small>overview</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> List all collections
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <h1></h1>
            <a href="{{ url('create_collection') }}">Create collection</a>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <h1>Collections</h1>
            <ul>
                {% for collection in collections %}
                    <li>{{ collection.getName }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container-fluid -->
<hr>
{% endblock %}