{% extends 'SmartClassroomBundle:Default:index.html.twig' %}

{% block template_content %}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ sensor.getName }} -  <small>Sensor</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> sensor with id {{ sensor.getId }}
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-sm-12">
            <h3>Details</h3>
            <p>Name: <br/>{{ sensor.getName }}</p>
            <p>Description: <br/>{{ sensor.getDescription }}</p>
            <p>Location description: <br/>{{ sensor.getLocationDescription }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div id="sensor-chart" style="height: 250px;"></div>
        </div>
    </div>
    <!-- /.row -->

    <script>
        var apiUrl = "{{ url('single_sensor_values', {'sensor_id': sensor.getId}) }}";
    </script>
</div>
<!-- /.container-fluid -->
<hr>
{% endblock %}